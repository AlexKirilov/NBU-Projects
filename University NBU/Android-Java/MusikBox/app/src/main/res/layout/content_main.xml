<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_gradient"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.testapps.alex.musikbox.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/play_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:background="@drawable/imageview"
        android:layout_width="260dp"
        android:layout_height="260dp" />

    <TextView
        android:id="@+id/text_txt"
        android:textSize="15sp"
        android:textColor="#FFd9d8ea"
        android:padding="5dp"
        android:text="Hello"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/controler"
        android:layout_below="@+id/play_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/prev_btn"
            android:background="@drawable/buttons_backround"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/play_btn"
            android:background="@drawable/buttons_backround"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/next_btn"
            android:background="@drawable/buttons_backround"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>


</RelativeLayout>
