<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/row_bg"
    android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/bandImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/headLinerText"
        android:text="Headliner"
        android:textStyle="bold"
        android:textColor="#ff212121"
        android:layout_below="@+id/bandImage"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/venueText"
        android:text="Venue"
        android:textStyle="italic"
        android:textColor="#ff2e2e2e"
        android:layout_below="@+id/headLinerText"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/whenText"
        android:text="When"
        android:textStyle="italic"
        android:textColor="#ff2e2e2e"
        android:layout_below="@+id/venueText"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/whereText"
        android:text="When"
        android:textStyle="italic"
        android:background="#ff2e2e2e"
        android:textColor="#fff"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/whenText"
        android:layout_centerHorizontal="true"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />





</RelativeLayout>